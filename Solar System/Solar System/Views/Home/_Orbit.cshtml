@model Solar_System.Models.OrbitViewModel

<svg class="orbit" 
     height="@(Model.MinorAxis+1)" 
     width="@(Model.MajorAxis+1)"
    style="left: -@(Model.Perihelion)px; top:-@(Model.SemiMinorAxis)">
    
    <ellipse cx="50%" cy="50%" rx="@(Model.SemiMajorAxis)" ry="@(Model.SemiMinorAxis)" />

</svg>
